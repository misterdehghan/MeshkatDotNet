@{
    ViewData["Title"] = " به روزرسانی حساب کاربری";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <title>به روزرسانی حساب کاربری </title>

    <!-- favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- Bootstrap -->
    <link href="~/Them/Landrick/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons -->
    <link href="~/Them/Landrick/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Them/Landrick/unicons.iconscout.com/release/v3.0.6/css/line.css">
    <!-- Main Css -->
    <link href="~/Them/Landrick/css/style.min.css" rel="stylesheet" type="text/css" id="theme-opt" />
    <link href="~/Them/Landrick/css/colors/default.css" rel="stylesheet" id="color-opt">
    <style>
        .bg-circle-gradiant {
            background: radial-gradient(circle at 50% 50%, rgba(47, 85, 212, 0.1) 0%, rgba(47, 85, 212, 0.1) 50.333%, rgba(47, 85, 212, 0.3) 100.333%, rgba(47, 85, 212, 0.3) 66.666%, rgba(47, 85, 212, 0.5) 66.666%, rgba(47, 85, 212, 0.5) 99.999%);
        }
    </style>
</head>

<body class="bg-auth-home bg-circle-gradiant d-table w-100">
    <!-- Loader -->
    <!-- <div id="preloader">
        <div id="status">
            <div class="spinner">
                <div class="double-bounce1"></div>
                <div class="double-bounce2"></div>
            </div>
        </div>
    </div> -->
    <!-- Loader -->

@*     <div class="back-to-home rounded d-none d-sm-block">
        <a href="./home/index" class="btn btn-icon btn-primary"><i data-feather="home" class="icons"></i></a>
    </div> *@

    <!-- شروع آن -->
    <section class="">
        <div class=""></div>
        <div class="container">
            <div class="row justify-content-center" >
                <div class="col-lg-6 col-md-9">
                    <div class="card shadow rounded border-0 mt-4">
                        <div class="card-body">
                            <h4 class="card-title text-center">به روز رسانی حساب کاربری </h4>
                            @if (ViewBag.Errors != null)
                                {
                                <div class=" alert alert-danger">
                                    <ul>
                                        @foreach (var item in ViewBag.Errors)
                                            {
                                            <li>@item</li>

                                            }
                                    </ul>
                                </div>

                                }
                            <form class="login-form mt-4" action="UpdateAccunt" method="post">
                                <input type="hidden" name="userName"  value="@ViewBag.username"/>
                                <input type="hidden" name="pass" value="@ViewBag.pass" />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label class="form-label">شماره حساب سپه   <span class="text-danger">*</span></label>
                                            <div class="form-icon position-relative">
                                                <i data-feather="user" class="fea icon-sm icons"></i>
                                                <input type="number" class="form-control ps-5"  maxlength="15" placeholder=" 13 تا 15 رقم " name="hesab" required="">
                                            </div>
                                        </div>
                                    </div><!--end col-->

                   

                

                                    <div class="col-md-12">
                                        <div class="d-grid">
                                            <button class="btn btn-primary">ذخیره  </button>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-lg-12 mt-4 text-center">
                                        <h6>کاربر محترم برای وایز جوایز به حساب شما این بروزرسانی صورت می پذیرد</h6>
                                 
                                    </div><!--end col-->

                                   
                                </div><!--end row-->
                            </form>
                        </div>
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div> <!--end container-->
    </section><!--end section-->
    <!-- پایان آن -->
    <!-- Style switcher -->
    
    <!-- end Style switcher -->
    <!-- javascript -->
    <script src="~/Them/Landrick/js/bootstrap.bundle.min.js"></script>
    <!-- Icons -->
    <script src="~/Them/Landrick/js/feather.min.js"></script>
    <!-- Switcher -->
    <script src="~/Them/Landrick/js/switcher.js"></script>
    <!-- Main Js -->
    <script src="~/Them/Landrick/js/plugins.init.js"></script><!--Note: All init js like tiny slider, counter, countdown, maintenance, lightbox, gallery, swiper slider, aos animation etc.-->
    <script src="~/Them/Landrick/js/app.js"></script><!--Note: All important javascript like page loader, menu, sticky menu, menu-toggler, one page menu etc. -->
</body>

</html>
