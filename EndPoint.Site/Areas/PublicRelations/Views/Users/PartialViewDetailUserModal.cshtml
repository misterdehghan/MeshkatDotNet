@using EndPoint.Site.Areas.PublicRelations.Models.Dto.User
@model GetUserDetailDto


<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="exampleModalLabel1">
                @("جزئیات" + " " + Model.FirstName + " " + Model.LastName)
            </h4>
            @if (Model.IsActive == true)
            {

                <span style="font-size:65%;" class="badge badge-pill badge-success">فعال</span>

            }
            else
            {
                <span style="font-size:65%;" class="badge badge-pill badge-secondary">غیر فعال</span>

            }
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="idInput" value="@Model.Id">

            <div class="modal-body">
                <div class="form-body">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">نام:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-static">@Model.FirstName</p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">نام خانوادگی:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-static">@Model.LastName</p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">استان:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-static">@Model.Province</p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">شهرستان:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-static">@Model.City</p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">کد پرسنلی:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-static">@Model.PersonnelCode</p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">شماره تماس:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-static">@Model.PhoneNumber</p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">تاریخ ایجاد:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-static">@Model.InsertTime</p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">بروز رسانی:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-static">@Model.UpdateTime</p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                    </div>
                    <hr class="m-t-0 m-b-40">

                    <div class="col-md-12">
                        @if (Model.Operator == null)
                        {
                            <p class="form-control-static label-danger" style="text-align: center; color:white;"> در حال حاضر کاربر هیچ نقشی ندارد. </p>
                        }
                        else
                        {
                            <p class="form-control-static" style="text-align: center;">  @("کاربر" + " " + Model.Operator) </p>
                        }
                    </div>



                </div>

            </div>
        </div>
        <div class="modal-footer">

            <button type="button" class="btn btn-danger" data-dismiss="modal">بستن</button>

        </div>
    </div>
</div>



