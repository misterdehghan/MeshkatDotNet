@addTagHelper *, LazZiya.TagHelpers
@using Azmoon.Application.Service.PublicRelations.MediaPerformances
@model ResultListMP
@using EndPoint.Site.Areas.PublicRelations.Helpers.Convertors;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/PublicRelations/Views/Shared/_Layout.cshtml";
    int pageSize = ViewBag.PageSize ?? 10; // مقدار پیش‌فرض 10 در صورت null بودن
    int pageNumber = ViewBag.PageNumber ?? 1; // مقدار پیش‌فرض 1 در صورت null بودن
    int startIndex = pageSize * (pageNumber - 1); // شروع از شماره مورد نظر بر اساس صفحه جاری
    int rowIndex = startIndex + 1;

}



<style>
    .messenger-logo {
        width: 25px; /* عرض مورد نظر خود را تنظیم کنید */
        height: 25px; /* ارتفاع مورد نظر خود را تنظیم کنید */
