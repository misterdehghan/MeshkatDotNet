@section Scripts {
     <link href="~/PublicRelations/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
     <script src="~/PublicRelations/Sweetalert2/sweetalert2.min.js"></script>


    <!-- This Page JS -->
    <script src="~/PublicRelations/theme/assets/libs/magnific-popup/dist/jquery.magnific-popup.min.js"></script>
    <script src="~/PublicRelations/theme/assets/libs/magnific-popup/meg.init.js"></script>


    <script>
        if (window.location.pathname === '/PublicRelations/MediaPerformances' && window.location.search.length === 0) {
            localStorage.removeItem("selectedCourseId");
            localStorage.removeItem("selectedYear");
            localStorage.removeItem("ConfirmationStatus");

            // بازنشانی دراپ‌دان‌ها به حالت پیش‌فرض
            yearSelect.value = '';
            courseSelect.innerHTML = '<option value="" disabled selected>انتخاب دوره</option>';
        }
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // تابع برای دریافت پارامتر از URL
            function getQueryParam(param) {
                const urlParams = new URLSearchParams(window.location.search);
                return urlParams.get(param);
            }

            // دریافت مقدار ConfirmationStatus از URL
            const confirmationStatus = getQueryParam("ConfirmationStatus");

            // اگر مقدار ConfirmationStatus موجود است، لینک‌ها را به‌روزرسانی کنید
            if (confirmationStatus) {
                const excelLink = document.getElementById("exportExcelLink");
                const pdfLink = document.getElementById("exportPdfLink");

                // افزودن پارامتر ConfirmationStatus به انتهای URL
                excelLink.href += `&ConfirmationStatus=${confirmationStatus}`;
                pdfLink.href += `&ConfirmationStatus=${confirmationStatus}`;
            }
        });


        document.addEventListener("DOMContentLoaded", function () {


            var courseSelect = document.getElementById("courseSelect");
            var yearSelect = document.getElementById("yearSelect");

            // بازیابی مقادیر انتخاب شده از Local Storage
            var savedCourseId = localStorage.getItem("selectedCourseId");
            var savedYear = localStorage.getItem("selectedYear");

            if (savedYear) {
                yearSelect.value = savedYear;
                loadCourses(savedYear, savedCourseId);
            }

            if (savedCourseId) {
                courseSelect.value = savedCourseId;
            }

            // بارگذاری دوره‌ها بر اساس سال انتخاب‌شده
            yearSelect.addEventListener("change", function () {
                var selectedYear = yearSelect.value;
                localStorage.setItem("selectedYear", selectedYear);

                if (!selectedYear) {
                    courseSelect.innerHTML = '<option value="" disabled selected>انتخاب دوره</option>';
                    return;
                }

                loadCourses(selectedYear, null);
            });

            document.getElementById("submitButton").addEventListener("click", function () {
                var courseId = courseSelect.value;

                if (!courseId) {
                    alert('لطفاً یک دوره انتخاب کنید.');
                    return;
                }

                localStorage.setItem("selectedCourseId", courseId);

                var url = '/PublicRelations/MediaPerformances/Index?CommunicationPeriodId=' + courseId;
                window.location.href = url;
            });

            document.getElementById("searchButton").addEventListener("click", function (event) {
                event.preventDefault();

                var courseId = courseSelect.value;
                var searchQuery = document.getElementById("searchInput").value;

                if (!courseId) {
                    alert('لطفاً یک دوره انتخاب کنید.');
                    return;
                }

                localStorage.setItem("selectedCourseId", courseId);

                // بازیابی ConfirmationStatus از Local Storage
                var confirmationStatus = localStorage.getItem("ConfirmationStatus");
                var url = `?CommunicationPeriodId=${courseId}`;

                // اضافه کردن پارامترهای جستجو و فیلتر
                if (searchQuery) {
                    url += `&searchKey=${searchQuery}`;
                }
                if (confirmationStatus) {
                    url += `&ConfirmationStatus=${confirmationStatus}`;
                }

                window.location.href = url;
            });



            // تابع برای ذخیره وضعیت ConfirmationStatus و ارسال به سرور
            window.getConfirmationStatus = function (el) {
                var courseId = localStorage.getItem("selectedCourseId");

                if (!courseId) {
                    alert('لطفاً ابتدا یک دوره انتخاب کنید.');
                    return;
                }

                var confirmationStatus = el.value;
                localStorage.setItem("ConfirmationStatus", confirmationStatus);

                updateRadioButtonUI(el); // بروزرسانی رنگ دکمه فعال

                // بازیابی searchKey از جستجوی قبلی
                var searchQuery = document.getElementById("searchInput").value;
                var url = `?CommunicationPeriodId=${courseId}&ConfirmationStatus=${confirmationStatus}`;

                // اضافه کردن پارامترهای جستجو و فیلتر
                if (searchQuery) {
                    url += `&searchKey=${searchQuery}`;
                }

                window.location.href = url; // ارسال درخواست به سرور
            };


            // تنظیم رنگ دکمه‌ها هنگام بارگذاری صفحه
            function setActiveRadioButton() {
                var confirmationStatus = localStorage.getItem("ConfirmationStatus");

                // اگر confirmationStatus وجود نداشت، به پیش‌فرض 'all' تنظیم شود
                if (!confirmationStatus) {  // <-- تغییر: بررسی وجود confirmationStatus
                    confirmationStatus = 'all'; // <-- تغییر: تنظیم مقدار پیش‌فرض به 'all'
                    localStorage.setItem("ConfirmationStatus", confirmationStatus); // <-- تغییر: ذخیره 'all' در localStorage
                }

                var radioButton = document.querySelector(`input[name="filterOptions"][value="${confirmationStatus}"]`);
                if (radioButton) {
                    radioButton.checked = true;
                    updateRadioButtonUI(radioButton);
                }
            }

            // بروزرسانی رنگ دکمه‌های فعال
            function updateRadioButtonUI(selectedButton) {
                document.querySelectorAll('.btn-group-toggle .btn').forEach(btn => {
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-light');
                });
                selectedButton.parentElement.classList.add('btn-success');
                selectedButton.parentElement.classList.remove('btn-light');
            }

            setActiveRadioButton();

            document.getElementById("reloadButton").addEventListener("click", function () {
                var courseId = localStorage.getItem("selectedCourseId");
                if (courseId) {
                    var url = '/PublicRelations/MediaPerformances/Index?CommunicationPeriodId=' + courseId;
                    window.location.href = url;
                } else {
                    alert('لطفاً یک دوره انتخاب کنید.');
                }
            });

            document.getElementById("reloadCourseButton").addEventListener("click", function () {
                localStorage.removeItem("selectedCourseId");
                localStorage.removeItem("selectedYear");
                localStorage.removeItem("ConfirmationStatus");
                window.location.href = '/MediaPerformances';
            });

            function loadCourses(year, selectedCourseId) {
                $.ajax({
                    url: '/PublicRelations/MediaPerformances/GetCoursesByYear',
                    type: 'GET',
                    data: { year: year },
                    success: function (data) {
                        courseSelect.innerHTML = '<option value="" disabled selected>انتخاب دوره</option>';
                        data.forEach(function (course) {
                            var option = document.createElement("option");
                            option.value = course.id;
                            option.text = course.statisticalPeriod;
                            courseSelect.appendChild(option);
                        });
                        if (selectedCourseId) {
                            courseSelect.value = selectedCourseId;
                        }
                    },
                    error: function () {
                        alert('خطا در دریافت اطلاعات. لطفاً دوباره تلاش کنید.');
                    }
                });
            }


            function getQueryParam(param) {
                // جستجوی مقدار پارامتر در URL
                var urlParams = new URLSearchParams(window.location.search);
                return urlParams.get(param);
            }



        });

    </script>

