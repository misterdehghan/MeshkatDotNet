                                    @foreach (var item in Model.mediaDto)
                                    {

                                        <tr>
                                            <td scope="row">@rowIndex</td>
                                            <td>@item.Operator</td>
                                            <td>
                                                @if(item.Media =="تلوزیون")
                                                {
                                                    <i style="color:#6a7a8f; font-size:.775rem" class="mdi mdi-television"></i>
                                                }else if(item.Media =="رادیو"){
                                                    <i style="color:#6a7a8f; font-size:.775rem;" class="mdi mdi-radio"></i>
                                                }
                                                else
                                                {
                                                    @item.Media
                                                }
                                            </td>
                                            <td>@item.NetworkName</td>
                                            <td>@item.ProgramName</td>
                                            <td>@item.SubjectTitle</td>
                                            <td>@item.Description</td>
                                            <td>
                                                  @item.BroadcastDate.ToShamsi()<br />
