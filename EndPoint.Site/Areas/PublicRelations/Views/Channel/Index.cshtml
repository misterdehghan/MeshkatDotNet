@section Scripts
    {


    <script>

        $(document).ready(function () {
            // وقتی دکمه با کلاس edit-row-btn کلیک می‌شود
            $('.add-row-btn').click(function () {
                // گرفتن مقادیر مورد نظر از دیتا ویژگی‌ها
                var id = $(this).data('id');

                // تنظیم مقادیر داده‌ها در ورودی‌های مرتبط
                $('#idInput').val(id);
            });
        });

        function AddMembers() {
            // دریافت مقادیر ویرایش شده از فرم مودال ادیت با استفاده از jQuery
            var ChannelId = $('#idInput').val();
            var Member = $('#Member').val();


            // ارسال مقادیر به سمت سرور با استفاده از AJAX
            var postData = {
                'ChannelId': ChannelId,
                'Member': Member,
            };

            $.ajax({
                contentType: 'application/x-www-form-urlencoded',
                dataType: 'json',
                type: 'POST',
                url: '@Url.Action("AddMembers")', // تغییر به URL درخواست به وب‌سرور
                data: postData,
                success: function (data) {
                    if (data.isSuccess == true) {
                        swal.fire(
                            'موفق!',
                            data.message,
                            'success'
                        ).then(function (isConfirm) {
                            location.reload();
                        });
                    } else {
                        swal.fire(
                            'هشدار!',
                            data.message,
                            'warning'
                        );
                    }
                },
                error: function (request, status, error) {
                    // نمایش پیام خطا در کنسول
                    console.error('خطا در درخواست:', request.responseText);
                },
            });

            // بستن مودال ادیت
            $('#NumberOfMembers').modal('hide');
        }
    </script>



    <script type="text/javascript">
        $(document).ready(function () {
