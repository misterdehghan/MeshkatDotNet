<div class="container-fluid">


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">گزارش کانال</h4>
                    <h6 class="card-subtitle">"لطفاً توجه داشته باشید که این صفحه حاوی اطلاعات با ارزش است و باید از هر گونه تغییر در آن بدون اطلاع قبلی پرهیز کرد."</h6>

                    <div class="table-responsive">

                        @*------*@
                        <div id="file_export_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">

                            @*   <div class="dt-buttons">
                                <button class="dt-button buttons-copy buttons-html5 btn btn-secondary mr-1" tabindex="0" aria-controls="file_export"><span>Copy</span></button>
                                <button class="dt-button buttons-csv buttons-html5 btn btn-secondary mr-1" tabindex="0" aria-controls="file_export"><span>CSV</span></button>
                                <button class="dt-button buttons-excel buttons-html5 btn btn-secondary mr-1" tabindex="0" aria-controls="file_export"><span>Excel</span></button>
                                <button class="dt-button buttons-pdf buttons-html5 btn btn-secondary mr-1" tabindex="0" aria-controls="file_export"><span>PDF</span></button>
                                <button class="dt-button buttons-print btn btn-secondary mr-1" tabindex="0" aria-controls="file_export"><span>Print</span></button>
                            </div> *@
                            <form class="m-t-20" method="get" asp-controller="Channel" asp-action="Index">
                                <div class="input-group mb-3 col-md-5 ml-auto">
                                    <div class="input-group-prepend">
                                        <a class="btn btn-secondary" asp-controller="Channel" asp-action="Index"><i class="ti-reload"></i></a>
                                    </div>
                                    <input class="form-control" placeholder="متن مورد نظر خود را وارد کنید" name="searchKey" value="@ViewBag.CurrentFilter">
                                    <div class="input-group-append">
                                        <button class="btn btn-success"><i class="ti-search"></i></button>
                                    </div>
                                </div>
                            </form>

                        </div>

                        <table id="my-table" class="table table-sm m-b-0">
                            <thead class="bg-success text-white">
                                <tr>
                                    <th scope="col">ردیف</th>
                                    <th scope="col">اپراتور</th>
                                    <th scope="col">پیامرسان</th>
                                    <th scope="col">نام کانال</th>
                                    <th scope="col">تعداد اعضا</th>
                                    <th scope="col">شماره موبایل</th>
                                    <th scope="col">وضعیت آماری</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Channels)
                                {

                                    <tr>
                                        <td scope="row">@rowIndex</td>
                                        <td>@item.Operator</td>
                                        <td>
                                            @switch (item.MessengersName)
                                            {
                                                case "واتس آپ":
                                                    <img src="/PublicRelations/Theme/assets/images/Logo/whatsapp.png" class="messenger-logo" />
                                                    break;
                                                case "تلگرام":
                                                    <img src="/PublicRelations/Theme/assets/images/Logo/telegram.png" class="messenger-logo" />
                                                    break;
                                                case "اینستاگرام":
                                                    <img src="/PublicRelations/Theme/assets/images/Logo/Instagram.png" class="messenger-logo" />
                                                    break;
                                                case "ایکس":
                                                    <img src="/PublicRelations/Theme/assets/images/Logo/x.png" class="messenger-logo" />
                                                    break;
                                                case "سروش پلاس":
                                                    <img src="/PublicRelations/Theme/assets/images/Logo/sorosh.png" class="messenger-logo" />
                                                    break;
                                                case "آی گپ":
                                                    <img src="/PublicRelations/Theme/assets/images/Logo/iGap.png" class="messenger-logo" />
                                                    break;
                                                case "ایتا":
                                                    <img src="/PublicRelations/Theme/assets/images/Logo/eeta.png" class="messenger-logo" />
                                                    break;
                                                case "بله":
                                                    <img src="/PublicRelations/Theme/assets/images/Logo/bale.png" class="messenger-logo" />
                                                    break;
                                                case "روبیکا":
                                                    <img src="/PublicRelations/Theme/assets/images/Logo/rubika.png" class="messenger-logo" />
                                                    break;
                                                default:
                                                    <!-- اگر هیچ یک از موارد بالا متناسب نبود -->
                                                    @item.MessengersName
                                                    break;
                                            }
                                        </td>
                                        <td>@item.ChannelName</td>
                                        <td class="font-weight-bold">
                                            @_getLastMembersService.Execute(item.Id).Data.ToString("#,0")
                                        </td>
                                        <td>@item.PhoneNumber</td>
                                        <td>
                                            @{
                                                var status = _getStatisticalStatus.Execute(item.Id);
                                            }

                                            @switch (status.IsSuccess)
                                            {
                                                case true:
                                                    <i class="fas fa-check-circle text-success" data-toggle="tooltip" data-placement="top" title="In Progress"></i>
                                                    <small class="text-success">@status.Message</small>
                                                    break;

                                                case false when status.Message == "دوره آماری فعال وجود ندارد":
                                                    <i class="fas fa-times-circle text-danger" data-toggle="tooltip" data-placement="top" title="In Progress"></i>
                                                    <small class="text-danger">@status.Message</small>
                                                    break;

                                                case false:
                                                    <i class="fas fa-exclamation-circle text-info" data-toggle="tooltip" data-placement="top" title="In Progress"></i>
                                                    <small>@status.Message</small>
                                                    break;
                                            }
                                        </td>
                                        <td style="text-align: left;">
                                            @switch (status.IsSuccess)
                                            {
                                                case true:
                                                    <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline add-row-btn" disabled data-original-title="افزایش/کاهش عضو" data-toggle="modal" data-target="#NumberOfMembers" data-id="@item.Id"><i class="fas fa-users" aria-hidden="true"></i></button>
                                                    break;

                                                case false when status.Message == "دوره آماری فعال وجود ندارد":
                                                    <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline add-row-btn" disabled data-original-title="افزایش/کاهش عضو" data-toggle="modal" data-target="#NumberOfMembers" data-id="@item.Id"><i class="fas fa-users" aria-hidden="true"></i></button>
                                                    break;

                                                case false:
                                                    <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline add-row-btn" data-original-title="افزایش/کاهش عضو" data-toggle="modal" data-target="#NumberOfMembers" data-id="@item.Id"><i class="fas fa-users" aria-hidden="true"></i></button>
                                                    break;
                                            }

                                            <button type="button" class="btn btn2 btn-sm btn-icon btn-pure btn-outline delete-row-btn"
                                                    data-channel-id="@item.Id"
                                                    data-url="@Url.Action("PartialViewListMemberModal", "Channel")">
                                                <i class="fas fa-table" aria-hidden="true"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" data-original-title="نمودار" disabled><i class=" fas fa-chart-bar" aria-hidden="true"></i></button>
                                            <button type="button" class="btn btn3 btn-sm btn-icon btn-pure btn-outline delete-row-btn"
                                                    data-channel-id="@item.Id"
                                                    data-url="@Url.Action("PartialViewDetailChannelModal", "Channel")">
                                                <i class="fas fa-info" aria-hidden="true"></i>
                                            </button>
                                            @if (!ViewBag.IsOperatorMatch)
                                            {
                                                <button disabled type="button" class="btn btn4 btn-sm btn-icon btn-pure btn-outline delete-row-btn"
                                                        data-original-title="ویرایش">
                                                    <i class="fas fa-edit" aria-hidden="true"></i>
                                                </button>
                                                <button disabled type="button" class="btn btn5 btn-sm btn-icon btn-pure btn-outline delete-row-btn">
                                                    <i class="fas fa-trash" aria-hidden="true"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn4 btn-sm btn-icon btn-pure btn-outline delete-row-btn"
                                                        data-original-title="ویرایش"
                                                        data-channel-id="@item.Id"
                                                        data-url="@Url.Action("PartialViewEditChannelModal", "Channel")">
                                                    <i class="fas fa-edit" aria-hidden="true"></i>
                                                </button>
                                                <button type="button" class="btn btn5 btn-sm btn-icon btn-pure btn-outline delete-row-btn"
                                                        data-channel-id="@item.Id"
                                                        data-url="@Url.Action("PartialViewDeleteChannelModal", "Channel")">
                                                    <i class="fas fa-trash" aria-hidden="true"></i>
                                                </button>

                                            }


                                        </td>
                                    </tr>
                                    rowIndex++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="text-center">
                    <paging total-records="@Model.RowCount"
                            page-no="@Model.CurrentPage"
                            page-size="@Model.PageSize"
                            show-prev-next="true"
                            show-total-pages="false"
                            show-total-records="false"
                            show-page-size-nav="true"
                            show-first-numbered-page="true"
                            show-last-numbered-page="true"
                            query-string-key-page-no="Page"
                            query-string-key-page-size="PageSize"
                            gap-size="2">
                    </paging>
                </div>
            </div>
            <a class="btn btn-primary mb-2" asp-controller="Channel" asp-action="AddChannel"><i class="fas fa-plus"></i>&nbsp; افزودن کانال جدید</a>
        </div>

    </div>


</div>


