@addTagHelper *, LazZiya.TagHelpers
@using Azmoon.Application.Service.PublicRelations.MessengerServices;
@model MessengerForAdmin


@{
    ViewData["Title"] = "ReportOfMessengers";
    Layout = "~/Areas/PublicRelations/Views/Shared/_Layout.cshtml";
    int startIndex = Model.PageSize * (Model.CurrentPage - 1); // شروع از شماره مورد نظر بر اساس صفحه جاری
}


<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
            @*<h4 class="page-title">افزودن پیامرسان جدید</h4>*@
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">گزارش ها</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">گزارش پیامرسان ها</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    </div>



<div class="container-fluid">


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">گزارش پیامرسان ها</h4>
                    <h6 class="card-subtitle">"لطفاً توجه داشته باشید که این صفحه حاوی اطلاعات با ارزش است و باید از هر گونه تغییر در آن بدون اطلاع قبلی پرهیز کرد."</h6>
                    <div class="table-responsive">
                        <table class="table table-sm m-b-0">
                            <thead class="bg-danger text-white">
                                <tr>
                                    <th scope="col" style="text-align:center;">ردیف</th>
                                    <th scope="col" style="text-align:center;">نام پیامرسان(فارسی)</th>
                                    <th scope="col" style="text-align:center;">نام پیامرسان(لاتین)</th>
                                    <th scope="col" style="text-align:center;"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.messengerDto)
                                {
                                    <tr>
                                        <td scope="row" style="text-align:center;">@(startIndex + Model.messengerDto.IndexOf(item) + 1)</td>
                                        <td style="text-align:center;">@item.PersianName</td>
                                        <td style="text-align:center;">@item.LatinName</td>


                                        <td style="text-align: left;">
                                            @if (startIndex + Model.messengerDto.IndexOf(item) < 9)
                                            {
                                                <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" data-original-title="ویرایش" data-toggle="modal" data-target="#exampleModal" disabled><i class="fas fa-edit" aria-hidden="true"></i></button>
                                                <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" data-toggle="tooltip" data-original-title="حذف" disabled><i class="fas fa-trash" aria-hidden="true"></i></button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline edit-row-btn" data-toggle="modal" data-original-title="ویرایش" data-target="#EditMessenger" data-id="@item.Id" data-persian-name="@item.PersianName" data-latin-name="@item.LatinName"><i class="fas fa-edit" aria-hidden="true"></i></button>
                                                <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" data-toggle="tooltip" data-original-title="حذف" onclick="RemoveUser(@item.Id)"><i class="fas fa-trash" aria-hidden="true"></i></button>
                                            }
                                        </td>


                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="  text-center">
                    <paging total-records="Model.RowCount"
                            page-no="Model.CurrentPage"
                            page-size="Model.PageSize"
                            show-prev-next="true"
                            show-total-pages="false"
                            show-total-records="false"
                            show-page-size-nav="true"
                            show-first-numbered-page="true"
                            show-last-numbered-page="true"
                            query-string-key-page-no="Page"
                            query-string-key-page-size="PageSize"
                            gap-size="2">
                    </paging>

                </div>
            </div>
            <button class="btn btn-primary mb-2" data-toggle="modal" data-target="#AddNewMessengers"><i class="fas fa-plus"></i>&nbsp; افزودن پیامرسان جدید</button>
        </div>

    </div>

    </div>


@section Modals
    {
    <div class="modal fade" id="EditMessenger" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel1">ویرایش پیامرسان</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="idInput">

                    <div class="form-group">
                        <label for="recipient-name" class="control-label">نام پیامرسان(فارسی):</label>
                        <input type="text" class="form-control" data-persian-name id="persianNameInput">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="control-label">نام پیامرسان(لاتین):</label>
                        <input type="text" class="form-control" id="latinNameInput">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">بستن</button>
                    <button type="button" class="btn btn-primary" onclick="EditUser()">بروزرسانی</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="AddNewMessengers" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel1">افزودن پیامرسان</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="recipient-name" class="control-label">نام پیامرسان(فارسی):</label>
                        <input type="text" class="form-control" id="PersianName" placeholder="لطفا نام پیامرسان را بصورت فارسی وارد نمائید">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="control-label">نام پیامرسان(لاتین):</label>
                        <input type="text" class="form-control" id="LatinName" placeholder="Please enter the names of the messengers in Latin">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">بستن</button>
                    <a onclick="AddMessenger()" class="btn btn-primary" style="color:white;">افزودن</a>
                </div>
            </div>
        </div>
    </div>
}


     <link href="~/PublicRelations/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
     <script src="~/PublicRelations/Sweetalert2/sweetalert2.min.js"></script>

    @section Scripts
    {
    <script>
        function AddMessenger() {
            swal.fire({
                title: 'افزودن پیامرسان جدید',
                text: "آیا از صحت اطلاعات وارد شده اطمینان دارید؟",
                icon: 'info',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'بله',
                cancelButtonText: 'خیر'
            }).then((result) => {
                if (result.value) {
                    var PersianName = $("#PersianName").val();
                    var LatinName = $("#LatinName").val();




                    var postData = {
                        'PersianName': PersianName,
                        'LatinName': LatinName,

                    };

                    $.ajax({
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: 'json',
                        type: "POST",
                        url: "AddMessengers", // تغییر به URL درخواست به وب‌سرور
                        data: postData,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal.fire(
                                    'موفق!',
                                    data.message,
                                    'success'
                                ).then(function (isConfirm) {
                                    location.reload();
                                });
                            }
                            else {
                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );
                            }
                        },
                        error: function (request, status, error) {
                            // نمایش پیام خطا در کنسول
                            console.error("خطا در درخواست:", request.responseText);
                        }
                    });
                    console.log(data.isSuccess)
                }
            });
        }

        $(document).ready(function () {
            // وقتی دکمه با کلاس edit-row-btn کلیک می‌شود
            $('.edit-row-btn').click(function () {
                // گرفتن مقادیر مورد نظر از دیتا ویژگی‌ها
                var id = $(this).data('id');
                var persianName = $(this).data('persian-name');
                var latinName = $(this).data('latin-name');

                // تنظیم مقادیر داده‌ها در ورودی‌های مرتبط
                $('#idInput').val(id);
                $('#persianNameInput').val(persianName);
                $('#latinNameInput').val(latinName);
            });
        });

        function EditUser() {
            // دریافت مقادیر ویرایش شده از فرم مودال ادیت با استفاده از jQuery
            var id = $('#idInput').val();
            var persianName = $('#persianNameInput').val();
            var latinName = $('#latinNameInput').val();

            // ارسال مقادیر به سمت سرور با استفاده از AJAX
            var postData = {
                'Id': id,
                'PersianName': persianName,
                'LatinName': latinName,
            };

            $.ajax({
                contentType: 'application/x-www-form-urlencoded',
                dataType: 'json',
                type: 'POST',
                url: '@Url.Action("EditMessenger")', // تغییر به URL درخواست به وب‌سرور
                data: postData,
                success: function (data) {
                    if (data.isSuccess == true) {
                        swal.fire(
                            'موفق!',
                            data.message,
                            'success'
                        ).then(function (isConfirm) {
                            location.reload();
                        });
                    } else {
                        swal.fire(
                            'هشدار!',
                            data.message,
                            'warning'
                        );
                    }
                },
                error: function (request, status, error) {
                    // نمایش پیام خطا در کنسول
                    console.error('خطا در درخواست:', request.responseText);
                },
            });

            // بستن مودال ادیت
            $('#EditMessenger').modal('hide');
        }


        function RemoveUser(MessengerId) {
            swal.fire({
                title: 'حذف پیامرسان',
                text: "کاربر گرامی از حذف این پیامرسان مطمئن هستید؟",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#7cacbe',
                confirmButtonText: 'بله ، پیامرسان حذف شود',
                cancelButtonText: 'خیر'
            }).then((result) => {
                if (result.value) {
                    var postData = {
                        'MessengerId': MessengerId,
                    };

                    $.ajax({
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: 'json',
                        type: "POST",
                        url: "@Url.Action("RemoveMessenger")",
                        data: postData,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal.fire(
                                    'موفق!',
                                    data.message,
                                    'success'
                                ).then(function (isConfirm) {
                                    location.reload();
                                });
                            }
                            else {
                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );
                            }
                        },
                        error: function (request, status, error) {
                            alert(request.responseText);
                        }
                    });
                }
            })
        }
    </script>

}