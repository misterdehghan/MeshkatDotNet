@using EndPoint.Site.Areas.PublicRelations.Models.Dto.Channel
@model GetChannelDetailDto
@using EndPoint.Site.Areas.PublicRelations.Helpers.Convertors;
@using Azmoon.Application.Service.PublicRelations.MembersServices;
@inject IGetLastMembersService _getLastMembersService

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="myLargeModalLabel">
                @("نام کانال:" + " " + Model.ChannelName)
                
            </h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        </div>
        <div class="modal-body">
            <div class="form-body">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label col-md-4  text-right">نام پیامرسان:</label>
                                <div class="col-md-8">
                                    <p class="form-control-static  text-left"> @Model.MessengersName </p>
                                </div>
                               
                            </div>
                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label col-md-4  text-right">تاریخ ایجاد:</label>
                                <div class="col-md-8">
                                    <p class="form-control-static  text-left"> @Model.InsertTime.ToShamsi() </p>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <!--/row-->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label col-md-4  text-right">تاریخ بروزرسانی:</label>
                                <div class="col-md-8">
                                    <p class="form-control-static   text-left">
                                        @if (Model.UpdateTime==null)
                                        {
                                            <span>تا به حال بروز رسانی نشده</span>
                                        }
                                        else
                                        {
                                            @Model.UpdateTime.Value.ToShamsi()
                                        }
                                        </p>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label col-md-4  text-right">شماره تلفن:</label>
                                <div class="col-md-8">
                                    <p class="form-control-static   text-left"> @Model.PhoneNumber </p>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <!--/row-->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label col-md-4  text-right">تعداد اعضا: </label>
                                <div class="col-md-8">
                                    <p class="form-control-static   text-left">
                                        @(_getLastMembersService.Execute(Model.Id).Data.ToString("#,0") +" "+ "نفر")
                                        </p>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label col-md-4  text-right">تاریخ فعال سازی:</label>
                                <div class="col-md-8">
                                    <p class="form-control-static   text-left"> @Model.ActivationDate.ToShamsi() </p>
                                </div> 
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <!--/row-->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label col-md-4 text-right">آدرس کانال: </label>
                                <div class="col-md-8">
                                    <p class="form-control-static   text-left"> @Model.Address </p>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                      
                        <!--/span-->
                    </div>
                </div>

             </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal">بستن</button>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->




