@addTagHelper *, LazZiya.TagHelpers
@using EndPoint.Site.Areas.PublicRelations.Helpers.Convertors;
@using Azmoon.Application.Service.PublicRelations.OperatorServices
@model ReslutOperator

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/PublicRelations/Views/Shared/_Layout.cshtml";
    int startIndex = @ViewBag.PageSize * (@ViewBag.PageNumber - 1); // شروع از شماره مورد نظر بر اساس صفحه جاری
    int rowIndex = startIndex + 1;
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-5 align-self-center">
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">گزارش ها</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">گزارش اپراتورها</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">گزارش اپراتور</h4>
                    <h6 class="card-subtitle">"لطفاً توجه داشته باشید که این صفحه حاوی اطلاعات با ارزش است و باید از هر گونه تغییر در آن بدون اطلاع قبلی پرهیز کرد."</h6>

                    <div class="table-responsive">

                        @*------*@
                        <div id="file_export_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">


                            <form class="m-t-20" method="get" asp-controller="Operator" asp-action="Index">
                                <div class="input-group mb-3 col-md-5 ml-auto">
                                    <div class="input-group-prepend">
                                        <a class="btn btn-info" asp-controller="Operator" asp-action="Index"><i class="ti-reload"></i></a>
                                    </div>
                                    <input class="form-control" placeholder="متن مورد نظر خود را وارد کنید" name="searchKey" value="@ViewBag.CurrentFilter">
                                    <div class="input-group-append">
                                        <button class="btn btn-success"><i class="ti-search"></i></button>
                                    </div>
                                </div>
                            </form>

                        </div>

                        <table id="my-table" class="table table-sm m-b-0">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th scope="col" style="text-align:center;">ردیف</th>
                                    <th scope="col" style="text-align:center;">نام اپراتور</th>
                                    <th scope="col" style="text-align:center;">
                                        <span>نام عادی</span>
                                        (NormalizedName)
                                    </th>
                                    <th scope="col" style="text-align:center;">تاریخ ثبت</th>
                                    <th scope="col" style="text-align:center;">تاریخ بروز رسانی</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.OperatorDtos)
                                {

                                    <tr>
                                        <td scope="row" style="text-align:center;">@rowIndex</td>
                                        <td style="text-align:center;">@item.Name</td>
                                        <td style="text-align:center;">@item.NormalizedName</td>
                                        <td style="text-align:center;">@item.InsertTime.ToShamsi()</td>
                                        <td style="text-align:center;">
                                            @if (item.UpdateTime == null)
                                            {
                                                @if (startIndex + Model.OperatorDtos.IndexOf(item) < 54)
                                                {
                                                    <span class="label label-danger">امکان بروز رسانی این فیلد وجود ندارد</span>

                                                }
                                                else
                                                {
                                                    <span class="label label-warning">تاکنون بروز رسانی نشده</span>
                                                }
                                            }
                                            else
                                            {
                                                @item.UpdateTime?.ToShamsi()
                                            }
                                        </td>


                                        <td style="text-align: left;">
                                            @if (startIndex + Model.OperatorDtos.IndexOf(item) < 54)
                                            {
                                                <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" data-original-title="ویرایش" disabled><i class="fas fa-edit" aria-hidden="true"></i></button>
                                                <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" data-toggle="tooltip" data-original-title="حذف" onclick="" disabled><i class="fas fa-trash" aria-hidden="true"></i></button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" data-original-title="ویرایش"><i class="fas fa-edit" aria-hidden="true"></i></button>
                                                <button type="button" class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" data-toggle="tooltip" data-original-title="حذف" onclick=""><i class="fas fa-trash" aria-hidden="true"></i></button>
                                            }
                                        </td>
                                    </tr>
                                    rowIndex++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="text-center">
                    <paging total-records="@Model.RowCount"
                            page-no="@Model.CurrentPage"
                            page-size="@Model.PageSize"
                            show-prev-next="true"
                            show-total-pages="false"
                            show-total-records="false"
                            show-page-size-nav="true"
                            show-first-numbered-page="true"
                            show-last-numbered-page="true"
                            query-string-key-page-no="Page"
                            query-string-key-page-size="PageSize"
                            gap-size="2">
                    </paging>
                </div>
            </div>
        </div>

    </div>
</div>

