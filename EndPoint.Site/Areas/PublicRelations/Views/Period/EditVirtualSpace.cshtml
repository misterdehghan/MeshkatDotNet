                            <small class="form-control-feedback" style="color:red">@("تاریخ شروع آمارگیری قبلی" + " " + Model.StartDate.ToShamsi())</small>
                            <input type="hidden" id="Startdate" />
                            <input type="hidden" id="OldStartdate" value="@Model.StartDate" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">تاریخ اتمام آمارگیری</label>
                            <input type="text" id="to_date" data-jdp data-jdp2-miladi-input="Enddate" class="form-control" value="" autocomplete="off">
                            <small class="form-control-feedback" style="color:red">@("تاریخ اتمام آمارگیری قبلی" + " " + Model.EndDate.ToShamsi())</small>
                            <input type="hidden" id="Enddate" />
                            <input type="hidden" id="OldEnddate" value="@Model.EndDate" />

                        </div>
                    </div>
                </div>



            </div>
        </div>

        <div class="form-actions">
            <div class="card-body text-right">
                <button type="button" onclick="EditStatisticalPeriod(event)" class="btn btn-info"> <i class="fa fa-check"></i> ذخیره</button>
                <button type="button" class="btn btn-dark">انصراف</button>
            </div>
        </div>
    </div>
</div>



