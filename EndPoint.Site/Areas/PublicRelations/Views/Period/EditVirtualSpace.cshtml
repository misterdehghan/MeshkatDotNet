    <script>
        function EditStatisticalPeriod(event) {
            event.preventDefault(); // جلوگیری از ارسال فرم به صورت پیش‌فرض

            var inputId = $("#inputId").val();
            var StatisticalPeriod = $("#StatisticalPeriod").val();
            var Startdate = $("#Startdate").val();
            var Enddate = $("#Enddate").val();


            var fromdate = $("#from_date").val();
            var todate = $("#to_date").val();

            // اگر از اینپوت خالی بودند، تاریخ قبلی رو استفاده کن
            if (!fromdate) {
                Startdate = $("#OldStartdate").val();
            } else {
                Startdate;
            }

            if (!todate) {
                Enddate = $("#OldEnddate").val();
            } else {
                Enddate;
            }




            var postData = {
                'Id': inputId,
                'StatisticalPeriod': StatisticalPeriod,
                'StartDate': Startdate,
                'EndDate': Enddate
            };

            // لاگ‌گذاری داده‌های ارسالی
            console.log("Post Data: ", postData);

            $.ajax({
                contentType: 'application/x-www-form-urlencoded',
                dataType: 'json',
                type: "POST",
                url: "EditVirtualSpace", // تغییر به URL درخواست به وبسرور
                data: postData,
                success: function (data) {
                    // لاگ‌گذاری پاسخ دریافت شده
                    console.log("Response Data: ", data);

                    if (data.isSuccess == true) {
                        swal.fire(
                            'موفق!',
                            data.message,
                            'success'
                        ).then(function (isConfirm) {
                            // location.reload();
                            window.location.href = "/PublicRelations/Period/IndexVirtualSpace";
                        });
                    } else {
                        swal.fire(
                            'هشدار!',
                            data.message,
                            'warning'
                        );
                    }
                },
                error: function (request, status, error) {
                    // نمایش پیام خطا در کنسول
                    console.error("خطا در درخواست:", request.responseText);
                }
            });
        }
