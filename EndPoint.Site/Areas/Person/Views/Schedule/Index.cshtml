
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Person/Views/Shared/_LayoutPerson.cshtml";
}
@using EndPoint.Site.Useful.Ultimite;
@model List<SchedulePeriod>
@using System.Globalization
@using Azmoon.Domain.Entities

<style>
    .table-hover tbody tr:hover {
        background: rgba(0,123,255,0.075);
    }
</style>

<div class="card mt-4">
    <div class="card-header bg-dark text-white">
        <i class="fas fa-list"></i> فهرست دوره‌های زمانی
        <a asp-action="CreatePeriod" class="btn btn-success btn-sm float-left">
            <i class="fas fa-plus"></i> دوره جدید
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover text-center mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>ردیف</th>
                        <th>از تاریخ</th>
                        <th>تا تاریخ</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                        {
                        var p = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@p.StartDate.ToPersianDateStrFarsi()</td>
                            <td>@p.EndDate.ToPersianDateStrFarsi()</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@p.Id"
                                   class="btn btn-sm btn-primary" data-toggle="tooltip" title="ویرایش">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@p.Id"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('آیا مطمئن هستید حذف شود؟');">
                                    <button type="submit" class="btn btn-sm btn-danger" data-toggle="tooltip" title="حذف">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>


