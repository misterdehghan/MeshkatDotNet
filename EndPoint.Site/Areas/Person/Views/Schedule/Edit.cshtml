@{
    ViewData["Title"] = "ویرایش دوره زمانی";
    Layout = "~/Areas/Person/Views/Shared/_LayoutPerson.cshtml";
}

@model SchedulePeriodEditViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Globalization
@using EndPoint.Site.Models



<div class="card mx-auto mt-4" style="max-width:900px;">
    <div class="card-header bg-warning text-white">
        <i class="fas fa-edit"></i> ویرایش دوره زمانی
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="input-group col-md-6 col-sm-12">

                    <div class="input-group-prepend">
                        <span class="input-group-text cursor-pointer" id="date5" data-mdpersiandatetimepicker="" data-mdpersiandatetimepicker-group="rangeSelector1" data-todate="" data-original-title="" title=""><i class='fas fa-calendar-alt' style='font-size:24px;color:forestgreen'></i></span>
                    </div>
                    <input asp-for="FromDate" type="hidden" value="@Model.FromDate" />
                    <input type="text" id="StartDateFake" value="@Model.FromDate" class="form-control" aria-label="date5" aria-describedby="date5" placeholder=" شروع " />
                    <span asp-validation-for="FromDate" class="text-danger"></span>
                </div>

                <div class="input-group col-md-6 col-sm-12">

                    <div class="input-group-prepend">
                        <span class="input-group-text cursor-pointer" id="date6" data-mdpersiandatetimepicker="" data-mdpersiandatetimepicker-group="rangeSelector1" data-todate="" data-original-title="" title=""><i class='fas fa-calendar-alt' style='font-size:24px;color:red'></i></span>
                    </div>
                    <input asp-for="ToDate" type="hidden" value="@Model.ToDate" />
                    <input type="text" id="EndDateFake" value="@Model.ToDate" class="form-control" aria-label="date6" aria-describedby="date6" placeholder=" پایان " />
                    <span asp-validation-for="ToDate" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <h5><i class="fas fa-calendar-week"></i> ساعات کاری</h5>
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>روز هفته</th>
                        <th>از ساعت</th>
                        <th>تا ساعت</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Days.Count; i++)
                        {
                        <tr>
                            <td>
                                @Model.Days[i].DayName
                                <input type="hidden" asp-for="Days[@i].DayOfWeek" />
                            </td>
                            <td>
                                <input asp-for="Days[@i].StartTime" type="time"
                                       class="form-control time-input" style="direction:ltr;text-align:left" />
                                <span asp-validation-for="Days[@i].StartTime" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="Days[@i].EndTime" type="time"
                                       class="form-control time-input" style="direction:ltr;text-align:left" />
                                <span asp-validation-for="Days[@i].EndTime" class="text-danger"></span>
                            </td>
                        </tr>
                        }
                </tbody>
            </table>

            <button type="submit" class="btn btn-primary btn-block btn-circle mt-3">
                <i class="fas fa-save"></i> ذخیره تغییرات
            </button>
        </form>
    </div>
</div>
@section Styles {

    <link href="~/lib/trumbowyg-2_25_1/ui/trumbowyg.css" rel="stylesheet" />
    <link href="~/lib/MD_BootstrapPersianDateTimePicker-master-bs5/dist/jquery.md.bootstrap.datetimepicker.style.css" rel="stylesheet" />
    <style>
        .input-group-prepend {
            margin-left: 10px !important;
        }

        .card {
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .time-input {
            max-width: 120px;
        }

        .btn-circle {
            border-radius: 50px;
            padding: .5rem 1.5rem;
        }

        .form-control:focus {
            box-shadow: 0 0 0 .2rem rgba(13,110,253,.25);
        }
    </style>
}
@section Scripts {

    <script src="~/lib/trumbowyg-2_25_1/trumbowyg.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/MD_BootstrapPersianDateTimePicker-master-bs5/dist/jquery.md.bootstrap.datetimepicker.js"></script>
        <script>
          $(function () {
                $('#date5').MdPersianDateTimePicker({
                      targetTextSelector: '#StartDateFake',
                      targetDateSelector: '#FromDate',
                     enableTimePicker: true,
                     modalMode: true
                   , textFormat:"yyyy/MM/dd"
                  });
                  $('#date6').MdPersianDateTimePicker({
                      targetTextSelector: '#EndDateFake',
                      targetDateSelector: '#ToDate',
                     enableTimePicker: true,
                     modalMode: true
                  ,  textFormat:"yyyy/MM/dd"
                  });
          });
    </script>

}


