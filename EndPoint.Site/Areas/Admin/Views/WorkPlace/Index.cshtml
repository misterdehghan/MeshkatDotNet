@model IEnumerable<Azmoon.Application.Service.WorkPlace.Dto.GetWorkPlaceViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var parentId = ViewBag.parentId;
}

<div>
    @Html.ActionLink("ایجاد زیرمجموعه", "Create", new { parentid = parentId }, new { @class = "btn btn-success  m-1" })
    @Html.ActionLink("بازگشت به لیست", "Index", new { parentid = 0 }, new { @class = "btn btn-outline-info mr-2" })

</div>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsChailren)
            </th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @if (item.IsChailren)
                        {
                            <span class="btn btn-success">دارای فرزند</span>
                        }
                        else
                        {
                            <span class="btn btn-warning">فاقد فرزند</span>
                        }

                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { Id = item.Id }, new { @class = "btn btn-outline-info" }) |
                        @Html.ActionLink("ایجاد زیرمجموعه", "Create", new { parentid = item.Id }, new { @class = "btn btn-outline-success" }) |
                        @if (item.IsChailren)
                        {
                            @Html.ActionLink("مشاهده زیر مجموعه", "Index", new { parentId = item.Id }, new { @class = "btn btn-outline-info" }); <span>|</span>

                        }

                        @Html.ActionLink("غیر فعال کردن", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-warning" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    هیچ مقداری یافت نگردید
                </td>
            </tr>

        }

    </tbody>
</table>

