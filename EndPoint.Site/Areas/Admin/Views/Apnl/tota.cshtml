
@{
    ViewData["Title"] = "tota";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3 col-sm-12 w3-pale-lime w3-panel w3-card pb-4 p-2">

        <form action="/Admin/Apnl/tota" method="post" id="totaForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="username"> نام کاربری:</label>
                <input type="text" class="form-control"  id="username" name="username">
            </div>
            <div class="form-group">
                <label for="quizId"> کد آزمون:</label>
                <input type="number" class="form-control" placeholder="" id="quizId" name="quizId">
            </div>
            <div class="form-group">
                <label for="questionCounter"> تعداد سوال:</label>
                <input type="number" class="form-control"  id="questionCounter" name="questionCounter">
            </div>
            <div class="form-group">
                <label for="trueQuestion"> تعداد جواب درست:</label>
                <input type="number" class="form-control" placeholder="" id="trueQuestion" name="trueQuestion">
            </div>
            <div class="form-group">
                <label for="falseQuestion"> تعداد جواب غلط:</label>
                <input type="number" class="form-control" placeholder="" id="falseQuestion" name="falseQuestion">
            </div>
            <div class="input-group  col-sm-12">

                <div class="input-group-prepend">
                    <span class="input-group-text cursor-pointer" id="date5" data-mdpersiandatetimepicker="" data-mdpersiandatetimepicker-group="rangeSelector1" data-todate="" data-original-title="" title=""><i class='fas fa-calendar-alt' style='font-size:24px;color:forestgreen'></i></span>
                </div>
                <input name="StartDate" id="StartDate" type="hidden" />
                <input type="text" id="StartDateFake" class="form-control" aria-label="date5" aria-describedby="date5" placeholder="زمان شروع آزمون" />

            </div>
            <div class="form-group">
                <label for="ip"> ip:</label>
                <input type="text" class="form-control" placeholder="" id="ip" name="ip">
            </div>


            <div class="row">

                <button type="submit" onclick="submitForm(event)" class="btn btn-outline-primary ml-2" style="text-align: center !important; font-size: 24px; color: red ">ذخیره <i class="fa fa-save"></i></button>
            </div>
        </form>
    </div>
</div>
<div id="overlay">
    <div class="cv-spinner">
        <span class="spinner"></span>
    </div>
</div>
@section Styles{
    <link href="~/lib/trumbowyg-2_25_1/ui/trumbowyg.css" rel="stylesheet" />
    <link href="~/lib/MD_BootstrapPersianDateTimePicker-master-bs5/dist/jquery.md.bootstrap.datetimepicker.style.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/trumbowyg-2_25_1/trumbowyg.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/MD_BootstrapPersianDateTimePicker-master-bs5/dist/jquery.md.bootstrap.datetimepicker.js"></script>

    <link href="~/lib/SweetAlert/sweetalert2.css" rel="stylesheet" />
    <script src="~/lib/SweetAlert/sweetalert2.js"></script>
    <link href="~/backend/css/Spiner.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $('#Description').trumbowyg();
        });
        $('#date5').MdPersianDateTimePicker({
            targetTextSelector: '#StartDateFake',
            targetDateSelector: '#StartDate',
            groupId: 'date5',
            fromDate: true,
            enableTimePicker: true,
            modalMode: true
        });

        function submitForm(event) {
            event.preventDefault()
            $("#overlay").fadeIn(300);


            var username = $('#username').val();
            var quizId = $('#quizId').val();
            var questionCounter = $('#questionCounter').val();
            var trueQuestion = $('#trueQuestion').val();
            var falseQuestion = $('#falseQuestion').val();
            var StartDate = $('#StartDate').val();
            var ip = $('#ip').val();

 
                var dataO = {
                    username: username,
                    quizId: quizId,
                    questionCounter: questionCounter,
                    trueQuestion: trueQuestion,
                    falseQuestion: falseQuestion,
                    StartDate: StartDate,
                    ip: ip
                };

            console.log("dataO : ", dataO);
              
                $.ajax({
                    type: "POST",
                    url: '/Admin/Apnl/tota',
                    data: dataO,
                    success: function (data) {
                        $("#overlay").fadeOut(300);
                        console.log("data : ", data);
                        if (data.isSuccess) {
                 
                            Swal.fire({
                                title: data.message,
                                text: 'عملیات با موفقیت انجام شد ',
                                icon: 'success',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: 'باشه!',
                                showCancelButton: false,
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    location.reload();
                                }
                            })
                        } else {
                   
                            Swal.fire({

                                icon: 'error',
                                title: 'ناموفق :(',
                                showConfirmButton: false,
                                timer: 2000
                            })
                        }
                    }
                    , error: function (jqXhr, textStatus, errorMessage) {
                        $("#overlay").fadeOut(300);
             
                        console.log('Error: ' + errorMessage);
                    }
                });
           

        }
    </script>
}