@model Azmoon.Application.Service.Answer.Dto.AddAnswerDto

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>ایجاد جواب</h1>


<div class="row">
    <div class="col-md-6 col-sm-12">
        <form asp-action="Create">
            <input name="QuestionId" type="hidden" value="@ViewBag.QuestionId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" type="hidden" />

            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="w3-input w3-animate-input col-12"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsTrue" /> @Html.DisplayNameFor(model => model.IsTrue)
                </label>
            </div>
            <div class="row">
                <button type="button" class="btn btn-outline-primary ml-2">ذخیره <i class="fa fa-save" style="font-size: 19px;"></i></button>
                <a class="btn btn-outline-info mr-2"
                 asp-area="Admin" asp-controller="Question"  asp-action="Details" asp-route-id="@ViewBag.QuestionId" asp-route-PageSize="10" asp-route-PageNo="1" >
                    بازگشت
                    <i class="fa fa-undo" style="font-size: 19px;"></i>
                </a>
            </div>
       
        </form>
    </div>
</div>



