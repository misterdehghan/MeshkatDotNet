@model Azmoon.Application.Service.JameiatQustion.Dto.AddJameiatQustionDto

@{
    ViewData["Title"] = "ایجاد سوال و جواب جمعیت شناسی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>ایجاد سوال و جواب جمعیت شناسی</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input type="hidden" asp-for="Id" class="form-control" />
                <input type="hidden" asp-for="referer" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
      
            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <select asp-for="ParentId" asp-items="@Model.Parentes" class="form-control">
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="typeQA" class="control-label"></label>
                <select asp-for="typeQA" asp-items="(IEnumerable<SelectListItem>)@ViewData["typeQASelectItem"]" class="form-control">
                </select>
                <span asp-validation-for="typeQA" class="text-danger"></span>
            </div>
            <div class="form-group" id="areaWight">
                <label asp-for="Wight" class="control-label"></label>
                <input asp-for="Wight" class="form-control" required />
                <span asp-validation-for="Wight" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <input type="submit" value="ذخیره" class="btn btn-success ml-2" />
                <a asp-action="Index" class="btn btn-primary ">بازگشت</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
     <script>
         function aa(){
            var selected = $('#typeQA').find(":selected").val();
             if (selected == 1) {
                 $('#areaWight').hide();
             }
             else {
                $('#areaWight').show();
             }
         }
         aa();
        $('#typeQA').on('change', function () {
            var selected = $('#typeQA').find(":selected").val();
            if (selected == 1) {
                $('#areaWight').hide();
            }
            else {
                $('#areaWight').show();
            }
         
         });
     </script>
 
}

