@model Azmoon.Application.Service.Question.Dto.AddQuestionViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>ویرایش سوال</h1>


<div class="row">
    <div class="col-md-6 col-sm-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control" ></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <input asp-for="Id" type="hidden" />
            <input asp-for="QuizId"  type="hidden" />

            <div class="form-grou row">
                <input type="submit" value="ذخیره" class="btn btn-outline-primary ml-2" />
                <a class="btn btn-outline-info"
                   asp-action="Details" asp-route-id="@Model.QuizId" asp-route-PageSize="10" asp-route-PageNo="1" asp-controller="Quiz" asp-area="Admin">
                    بازگشت
                </a>
            </div>
        </form>
    </div>
</div>

